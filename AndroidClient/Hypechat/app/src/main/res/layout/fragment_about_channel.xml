<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:id="@+id/about_channel_not_connection_layout"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton_about_channel"
                    android:layout_width="match_parent"
                    android:tint="@color/colorPrimary"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/refresh" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/reload_no_info" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar_about_channel"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/channel_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_user"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@drawable/channel_info" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/channel_name" />

                <TextView
                    android:id="@+id/textView_channel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/owner_name" />

                <TextView
                    android:id="@+id/textView_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/privacy" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:paddingLeft="80dp"
                    android:paddingStart="80dp"
                    android:paddingRight="50dp"
                    android:focusableInTouchMode="true"
                    android:paddingEnd="50dp"
                    android:id="@+id/rl_privacy_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textView_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="20dp"
                        android:textColor="@android:color/primary_text_light"
                        android:paddingStart="20dp"
                        android:textSize="16sp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:gravity="center"
                        android:text="" />

                    <CheckBox
                        android:id="@+id/checkBox_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:checked="true"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/textView_privacy"
                        android:layout_toRightOf="@+id/textView_privacy"
                        android:text=""
                        android:layout_alignParentRight="true" />

                </RelativeLayout>



                <TextView
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="@string/description" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:paddingLeft="80dp"
                    android:paddingStart="80dp"
                    android:paddingRight="50dp"
                    android:focusableInTouchMode="true"
                    android:paddingEnd="50dp"
                    android:id="@+id/rl_description_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/description_channel_et"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textColor="@android:color/primary_text_light"
                        android:paddingStart="20dp"
                        android:textSize="16sp"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:imeOptions="actionDone"
                        tools:ignore="Autofill"
                        android:inputType="text" />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_toRightOf="@+id/description_channel_et"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/image_desc"
                        android:src="@android:drawable/ic_menu_edit"
                        android:id="@+id/et_desc_channel_button"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/description_channel_et" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="@string/welcome_message" />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:paddingLeft="80dp"
                    android:paddingStart="80dp"
                    android:paddingRight="50dp"
                    android:focusableInTouchMode="true"
                    android:paddingEnd="50dp"
                    android:id="@+id/rl_welcomemsg_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:background="@android:color/transparent"
                        android:id="@+id/welcomemsg_channel_et"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/primary_text_light"
                        android:paddingRight="20dp"
                        android:paddingEnd="20dp"
                        android:imeOptions="actionDone"
                        tools:ignore="Autofill"
                        android:inputType="text" />
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_toRightOf="@+id/welcomemsg_channel_et"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/image_desc"
                        android:src="@android:drawable/ic_menu_edit"
                        android:id="@+id/et_welcomemsg_channel_button"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/welcomemsg_channel_et" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="@string/msg_quantity" />

                <TextView
                    android:id="@+id/textView_msg_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/textView8"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="@string/members_quantity" />

                <TextView
                    android:id="@+id/textView_members_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>