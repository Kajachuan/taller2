<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewChannelFragment">

    <LinearLayout
        android:id="@+id/new_channel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="56dp"
        android:paddingRight="24dp">

        <ProgressBar
            android:id="@+id/new_channel_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <Switch
            android:id="@+id/switch_new_channel"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:text="@string/privado" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_channel_ti_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="@color/colorAccent">

            <AutoCompleteTextView
                android:id="@+id/new_channel_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_channel"
                android:imeOptions="actionDone"
                android:inputType="text|textPersonName"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/new_channel_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="36dp"
            android:background="@color/colorAccent"
            android:text="@string/action_create_channel"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>