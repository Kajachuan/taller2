<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tm_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tm_name"
        android:id="@+id/layout_msg_file"
        android:background="@drawable/their_message"
        android:layout_alignParentStart="true"
        android:padding="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/tm_message_body"
            android:background="@android:color/transparent"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:elevation="2dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/download_file"
            android:text="Sample" />

        <TextView
            android:id="@+id/tm_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:text="filename" />

    </LinearLayout>




    <TextView
        android:id="@+id/tm_time"
        android:layout_toRightOf="@+id/layout_msg_file"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:15"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/layout_msg_file"
        android:layout_toEndOf="@+id/layout_msg_file" />
</RelativeLayout>