<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tm_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Rose"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tm_message_body"
        android:layout_below="@+id/tm_name"
        android:layout_alignLeft="@+id/tm_name"
        android:background="@drawable/their_message"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:layout_alignStart="@+id/tm_name" />


    <TextView
        android:id="@+id/tm_time"
        android:layout_toRightOf="@+id/tm_message_body"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:15"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@+id/tm_message_body"
        android:layout_toEndOf="@+id/tm_message_body" />
</RelativeLayout>