<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="50dp"
    android:clipToPadding="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m_message_body"
        android:background="@drawable/my_message"
        android:textColor="#fff"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:text="Ejemplo de texto bien largo para ver si el tamaÃ±o deseado del problema"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/m_time"
        android:layout_toLeftOf="@+id/m_message_body"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/m_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:15:00"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/m_message_body" />


</RelativeLayout>